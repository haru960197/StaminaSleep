generator client {
  provider = "prisma-client"
  output   = "../src/generated/client"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  sleepLogs SleepLog[]
}

model SleepLog {
  id               Int      @id @default(autoincrement())
  userId           Int
  user             User     @relation(fields: [userId], references: [id])
  bedtime          DateTime
  wakeTime         DateTime
  quality          Int      // 1-5
  mood             Int      // 1-5
  memo             String?
  temperature      Float?
  pressure         Float?
  weatherCondition String?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}